<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_list_item_txtstationname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Stationsname"

        android:layout_marginStart="5dp"

        android:textColor="@color/textColor"
        android:textSize="17sp"
        android:textStyle="bold"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_list_item_txtlastvisited"

        android:layout_below="@+id/progress_list_item_txtstationname"
        android:layout_alignParentEnd="true"
        android:text="@string/txt_not_visited_yet_name"

        android:layout_marginEnd="7dp"
        android:textStyle="italic"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/textColor"
        />

</RelativeLayout>